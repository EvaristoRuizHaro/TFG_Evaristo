<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F0F4F1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Día a IA"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnEntrenamiento"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="MI ENTRENAMIENTO"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="16dp"
        app:cornerRadius="12dp"/>

    <Button
        android:id="@+id/btnDieta"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="MI NUTRICIÓN"
        android:textSize="18sp"
        android:backgroundTint="#81C784"
        android:layout_marginBottom="16dp"
        app:cornerRadius="12dp"/>

    <Button
        android:id="@+id/btnProgresoIA"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="CONSEJOS DE IA"
        android:textSize="18sp"
        android:backgroundTint="#1B5E20"
        app:cornerRadius="12dp"/>

</LinearLayout>